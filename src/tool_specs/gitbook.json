{
  "type": "function",
  "function": {
    "name": "gitbook",
    "displayName": "GitBook",
    "category": "development",
    "tags": ["knowledge", "docs", "search"],
    "description": "Recherche et exploration de documentation GitBook. Découverte automatique de pages, recherche globale sans connaître les URLs.",
    "parameters": {
      "type": "object",
      "properties": {
        "operation": {
          "type": "string",
          "enum": ["find_docs", "extract_base_url", "discover_site", "search_site", "read_page"],
          "description": "Type d'opération GitBook"
        },
        "company": {
          "type": "string",
          "description": "Nom entreprise/organisation (find_docs)"
        },
        "page_url": {
          "type": "string",
          "description": "URL page (extract_base_url)"
        },
        "base_url": {
          "type": "string",
          "description": "URL base site GitBook (ex: https://docs.example.gitbook.io)"
        },
        "url": {
          "type": "string",
          "description": "URL page spécifique (read_page)"
        },
        "query": {
          "type": "string",
          "description": "Requête recherche (search_site)"
        },
        "max_results": {
          "type": "integer",
          "minimum": 1,
          "maximum": 50,
          "default": 10,
          "description": "Max résultats recherche (default: 10, max: 50)"
        },
        "max_pages": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "default": 20,
          "description": "Max pages à parcourir (default: 20, max: 100)"
        }
      },
      "required": ["operation"],
      "additionalProperties": false
    }
  }
}
