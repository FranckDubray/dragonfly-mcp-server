{
  "type": "function",
  "function": {
    "name": "git",
    "displayName": "Git",
    "description": "Git unifié: GitHub API + Git local. Opérations haut-niveau fiables: ensure_repo, config_user, set_remote, sync_repo (pousse tout le dépôt en un seul commit/push si nécessaire).",
    "parameters": {
      "type": "object",
      "properties": {
        "operation": {
          "type": "string",
          "enum": [
            "ensure_repo",
            "config_user",
            "set_remote",
            "sync_repo",
            "status",
            "branch_create",
            "checkout",
            "add_paths",
            "commit_all",
            "push",
            "create_repo",
            "get_user",
            "list_repos",
            "add_file",
            "add_multiple_files",
            "delete_file",
            "delete_multiple_files",
            "get_repo_contents",
            "create_branch",
            "get_commits",
            "diff",
            "merge"
          ]
        },
        "repo_dir": { "type": "string", "description": "Chemin relatif sous la racine projet" },
        "branch": { "type": "string", "default": "main" },
        "message": { "type": "string", "description": "Message de commit pour sync_repo/commit_all" },
        "user_name": { "type": "string" },
        "user_email": { "type": "string" },
        "owner": { "type": "string" },
        "repo": { "type": "string" },
        "overwrite": { "type": "boolean", "default": true },
        "overwrite_remote": { "type": "boolean", "default": true },
        "visibility": { "type": "string", "enum": ["private", "public"], "default": "private" },
        "username": { "type": "string" },
        "file_path": { "type": "string" },
        "repo_path": { "type": "string" },
        "files": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "local_path": { "type": "string" },
              "repo_path": { "type": "string" }
            },
            "required": ["local_path", "repo_path"],
            "additionalProperties": false
          }
        },
        "base": { "type": "string" },
        "head": { "type": "string" },
        "commit_title": { "type": "string" },
        "commit_message": { "type": "string" },
        "from_branch": { "type": "string" },
        "count": { "type": "integer", "minimum": 1, "default": 5 },
        "path": { "type": "string" }
      },
      "required": ["operation"],
      "additionalProperties": false
    }
  }
}
