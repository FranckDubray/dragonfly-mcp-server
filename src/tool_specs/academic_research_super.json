{
  "type": "function",
  "function": {
    "name": "academic_research_super",
    "displayName": "Research",
    "category": "intelligence",
    "tags": ["knowledge", "research", "external_sources"],
    "description": "Recherche académique multi-sources (PubMed, arXiv, HAL, CrossRef).",
    "parameters": {
      "type": "object",
      "properties": {
        "operation": {
          "type": "string",
          "enum": ["search_papers", "get_paper_details", "search_authors", "get_citations"],
          "description": "Type d'opération de recherche académique"
        },
        "query": {
          "type": "string",
          "description": "Requête de recherche"
        },
        "sources": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["pubmed", "arxiv", "hal", "crossref"]
          },
          "description": "Sources à interroger (default: toutes)"
        },
        "max_results": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "description": "Nombre maximum de résultats par source (default: 10)"
        },
        "year_from": {
          "type": "integer",
          "minimum": 1900,
          "maximum": 2030,
          "description": "Année de début pour filtrer les résultats"
        },
        "year_to": {
          "type": "integer",
          "minimum": 1900,
          "maximum": 2030,
          "description": "Année de fin pour filtrer les résultats"
        },
        "paper_id": {
          "type": "string",
          "description": "ID d'un article pour get_paper_details"
        },
        "author_name": {
          "type": "string",
          "description": "Nom d'auteur pour search_authors"
        },
        "doi": {
          "type": "string",
          "description": "DOI de l'article pour certaines opérations"
        },
        "pmid": {
          "type": "string",
          "description": "PubMed ID pour certaines opérations"
        },
        "arxiv_id": {
          "type": "string",
          "description": "ArXiv ID pour certaines opérations"
        },
        "max_total_items": {
          "type": "integer",
          "minimum": 1,
          "maximum": 500,
          "description": "Nombre maximum total d'items retournés après fusion (défaut: 50)"
        },
        "max_abstract_chars": {
          "type": "integer",
          "minimum": 0,
          "maximum": 20000,
          "description": "Longueur maximum de chaque abstract (défaut: 2000, 0 = aucun abstract)"
        },
        "max_bytes": {
          "type": "integer",
          "minimum": 1000,
          "maximum": 5000000,
          "description": "Taille JSON maximale du payload de réponse (en octets). Le tool tronque et réduit jusqu'à respecter cette limite (défaut: 200000 ≈ 200KB)"
        }
      },
      "required": ["operation"],
      "additionalProperties": false
    }
  }
}
