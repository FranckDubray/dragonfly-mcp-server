{
  "type": "function",
  "function": {
    "name": "random",
    "displayName": "Random Numbers",
    "category": "utilities",
    "tags": ["randomness", "physical"],
    "description": "Générateur nombres aléatoires VRAIS (bruit atmosphérique RANDOM.ORG). Fallback CSPRNG si échec. Output MINIMAL.",
    "parameters": {
      "type": "object",
      "properties": {
        "operation": {
          "type": "string",
          "enum": ["generate_integers", "generate_floats", "generate_bytes", "coin_flip", "dice_roll", "shuffle", "pick_random"],
          "description": "Operation: generate_integers (entiers), generate_floats (décimaux), generate_bytes (bytes), coin_flip (pile/face), dice_roll (dé), shuffle (mélanger), pick_random (choisir)"
        },
        "min": {
          "type": "integer",
          "description": "Min value (inclusive) for integers. Default: 0",
          "default": 0
        },
        "max": {
          "type": "integer",
          "description": "Max value (inclusive) for integers. Default: 100",
          "default": 100
        },
        "count": {
          "type": "integer",
          "description": "Number of values (1-10000, default: 1)",
          "minimum": 1,
          "maximum": 10000,
          "default": 1
        },
        "unique": {
          "type": "boolean",
          "description": "Unique integers only (no duplicates). Default: false",
          "default": false
        },
        "decimals": {
          "type": "integer",
          "description": "Decimal places for floats (1-20, default: 2)",
          "minimum": 1,
          "maximum": 20,
          "default": 2
        },
        "length": {
          "type": "integer",
          "description": "Bytes length (1-1000, default: 16)",
          "minimum": 1,
          "maximum": 1000,
          "default": 16
        },
        "format": {
          "type": "string",
          "enum": ["hex", "base64", "decimal"],
          "description": "Bytes format: hex, base64, decimal. Default: hex",
          "default": "hex"
        },
        "sides": {
          "type": "integer",
          "description": "Die sides (3-100, default: 6)",
          "minimum": 3,
          "maximum": 100,
          "default": 6
        },
        "items": {
          "type": "array",
          "description": "Items to shuffle or pick from (required for shuffle/pick_random)",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "maxItems": 10000
        }
      },
      "required": ["operation"],
      "additionalProperties": false
    }
  }
}
